<ul id="nav-tab" class=" nav">
  <li class="active"><a href="#menu">Menus</a></li>
  <li><a href="#description">Description</a></li>
  <li><a href="#avis">Avis</a></li>
</ul>
<div class="tab-content">
  <div class="tab-pane active p-2" id="menu">Menu</div>
  <div class="tab-pane p-2" id="description"> <%= @restaurant.description %> </div>
  <div class="tab-pane p-2" id="avis">
    <h2>
  <%= pluralize @restaurant.reviews.size, "review" %>
</h2>
<div id="reviews">
  <%= render 'reviews/form', restaurant: @restaurant, review: @review %>
  <% if @restaurant.reviews.blank? %>
    Be the first to leave a review for <%= @restaurant.name %>
  <% else %>
    <% @restaurant.reviews.each do |review| %>
      <%= render 'reviews/show', review: review %>
    <% end %>
  <% end %>
  </div>
</div>

