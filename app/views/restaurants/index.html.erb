<div class="container">
  <div class="row d-flex justify-content-center">
    <h1 class="text-center">Restaurants</h1>
  </div>
  <div class="row justify-content-center">
    <%= render "shared/search" %>
  </div>
</div>
<div class="row d-flex justify-content-center">
  <% @restaurants.each do |restaurant| %>
    <div class="col-lg-3 col-md-3 card m-2 p-2">
      <span class="stars">
        <% empty_stars = 5 - restaurant.stars %>
      <% restaurant.stars.times do %>
        <span class="fas fa-star"></span>
      <% end %>
        <% empty_stars.times do %>
        <span class="far fa-star"></span>
      <% end %>
    </span>
    <%= image_tag restaurant.photo,class: "photo-show", alt: "restaurant.name" %>
    <h2 class="justify-self-end"> <%= restaurant.name.capitalize %></h2>
    <p class="price-avg"><%= restaurant.price_avg %>â‚¬</p>
    <div>
    </div>
    <p>Prix moy.</p>
    <%= link_to "Visit",restaurant_path(restaurant),class: "button-visit" %>
  </div>
  <% end %>
</div>
<div class="row d-flex justify-content-center">
<div
  id="map"
  style="width: 80%;
  height: 400px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
</div>
</div>
